<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_view_padding"
        android:layout_marginEnd="@dimen/standard_view_padding"
        android:layout_marginStart="@dimen/standard_view_padding"
        android:layout_marginTop="@dimen/standard_view_padding"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/locationContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/locationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_view_padding"
                android:gravity="start|center"
                android:paddingLeft="@dimen/standard_view_padding"
                android:paddingRight="@dimen/standard_view_padding"
                android:paddingTop="@dimen/standard_view_padding"
                android:textColor="@color/location_title"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="@dimen/standard_view_padding"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#99777777"
                    android:padding="@dimen/standard_view_padding" />

            </LinearLayout>

            <TextView
                android:id="@+id/locationGeo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:paddingBottom="@dimen/standard_view_padding"
                android:paddingLeft="@dimen/standard_view_padding"
                android:paddingRight="@dimen/standard_view_padding"
                android:paddingTop="@dimen/standard_view_padding"
                android:text="location geo"
                android:textSize="@dimen/songs_count" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="@dimen/album_title"
                android:layout_marginStart="@dimen/standard_view_padding"
                android:background="#99777777"
                android:padding="@dimen/standard_view_padding" />

            <TextView
                android:id="@+id/formatted_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:paddingBottom="@dimen/standard_view_padding"
                android:paddingLeft="@dimen/standard_view_padding"
                android:paddingRight="@dimen/standard_view_padding"
                android:paddingTop="@dimen/standard_view_padding"
                android:textColor="@color/location_title"
                android:textSize="@dimen/songs_count" />

            <TextView
                android:id="@+id/locationRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/standard_view_padding"
                android:paddingRight="@dimen/standard_view_padding"
                android:paddingTop="8dp"
                android:text=""
                android:textColor="#8004a8e9" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>