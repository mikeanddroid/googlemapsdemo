<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/location_title"
    android:orientation="vertical"
    tools:context="com.mike.givemewingzz.bbvamaps.ui.MapLocationDetails">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_view_padding"
        android:layout_marginEnd="@dimen/standard_view_padding"
        android:layout_marginStart="@dimen/standard_view_padding"
        android:layout_marginTop="@dimen/standard_view_padding"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/locationDetailsImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#000000"
                android:padding="1dp" />

            <TextView
                android:id="@+id/locationDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:padding="@dimen/album_title"
                android:text="Location Name : "
                android:textSize="25sp" />

            <TextView
                android:id="@+id/locationDetailsGeo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:padding="@dimen/album_title"
                android:text="Location Geo : " />

            <TextView
                android:id="@+id/locationDetailsAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:padding="@dimen/album_title"
                android:text="Address : " />

            <TextView
                android:id="@+id/locationDetailsRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:padding="@dimen/album_title"
                android:text="Rating : " />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/locationDetailsNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8004a8e9"
        android:gravity="center"
        android:padding="@dimen/album_title"
        android:text="Navigate to Google Maps" />
</LinearLayout>